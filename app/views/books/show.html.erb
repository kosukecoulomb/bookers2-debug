<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info' ,user: @showbook.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@showbook.user) do %>
            <%= image_tag @showbook.user.get_profile_image, size:"100x100" %><br>
            <%= @showbook.user.name %>
            <% end %>
          </td>
          <td><%= link_to @showbook.title, @showbook %></td>
          <td><%= @showbook.body %></td>
            <% if @showbook.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@showbook), class: "btn btn-sm btn-success edit_book_#{@showbook.id}" %></td>
              <td><%= link_to 'Destroy', @showbook, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
            <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>